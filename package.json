{
  "name": "water_me_mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest --watch --silent",
    "test-coverage": "jest --coverage --silent",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "eslint '**/*.{js,ts,tsx}' --fix",
    "prettier:fix": "prettier --write \"**/*.{js,ts,tsx}\"",
    "prettier:check": "prettier --list-different \"**/*.{js,ts,tsx}\"",
    "typescript:check": "tsc --noEmit"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.13.2",
    "@react-native-community/datetimepicker": "^3.0.9",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-google-signin/google-signin": "^6.0.0",
    "@react-navigation/native": "^5.8.10",
    "@react-navigation/stack": "^5.12.8",
    "@types/react-native-document-picker": "^2.0.1",
    "axios": "^0.21.1",
    "jwt-decode": "^3.1.2",
    "react": "16.13.1",
    "react-native": "^0.63.4",
    "react-native-document-picker": "^4.2.0",
    "react-native-dotenv": "^2.5.0",
    "react-native-gesture-handler": "^1.9.0",
    "react-native-image-picker": "^3.1.3",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-screens": "^2.16.1",
    "react-native-svg": "^12.1.0",
    "react-native-svg-transformer": "^0.14.3",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "ts-jest": "^26.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react-hooks": "^5.1.0",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@types/react-native": "^0.63.50",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-redux": "^7.1.16",
    "@types/react-test-renderer": "^17.0.1",
    "@types/redux-mock-store": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-jest": "^25.1.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-native": "^3.8.1",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "metro-react-native-babel-preset": "^0.59.0",
    "nock": "^13.0.9",
    "react-dom": "^17.0.1",
    "react-native-typescript-transformer": "^1.2.13",
    "react-test-renderer": "16.13.1",
    "redux-mock-store": "^1.5.4",
    "typescript": "^4.2.2"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>setupTests.ts"
    ],
    "cacheDirectory": ".jest/cache",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|my-project|react-native-button|@react-native-async-storage/async-storage|@react-native-community/datetimepicker|react-native-document-picker|react-native-image-picker|@react-navigation/stack|react-native-gesture-handler|react-native-iphone-x-helper)/)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/frontend/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/frontend/styling/*"
    ],
    "coverageReporters": [
      "json",
      "html",
      "text"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ]
  }
}
